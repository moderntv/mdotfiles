# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.neon]
indent_style = tab
tab_width = 4

[*.json]
tab_width = 2
indent_size = 2

[Makefile]
indent_style = tab
tab_width = 4
